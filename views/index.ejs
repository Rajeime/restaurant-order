<!DOCTYPE html>
<html lang="en">
<%-include('./partials/head') %>
<body class="index-background">
    <%-include('./partials/header') %> 

    <div class="banner">
        <h1>Our Menu</h1>
    </div>
    <div class="surround">
        <% userData.forEach((item)=>{%>
            <div class="card">
                <img src="<%= item.itemImage %> " alt="" style="width:100%; height: 50%;">
                <h3><%= item.itemName %> </h3>
                <p class="price"> $ <%= item.itemPrice %> </p>
                <p class="product-id"><%= item.productId %></p>
                <button class="addButton">Add to cart</button>
            </div>
                <% }) ;%>
    </div>       
    <!-- cart modal -->
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
        <span class="close">&times;</span>
        <form action="/auth/order" method="POST">
            <div class="items">

            </div>
            <div class="total">
                <h4 class="total">Total:</h4>
            </div>
            <div class="information">
                <input type="text" placeholder="Enter Name" name="name">
                <input type="text" placeholder="Enter Phone Number" name="phone_number">
                <input type="text" placeholder="Enter Email" name="email">
            </div>
         
            <button class="" type="submit">Order</button>
        </form>
        </div>
    
    </div>
</body>

<script src="script.js"></script>
</html>